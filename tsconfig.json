{
  "exclude": ["node_modules", "dist"],
  "include": ["src/*.ts"],
  "compilerOptions": {
    "declaration": true,
    "declarationDir": "./dist",
    "lib": ["esnext", "dom"],
    "module": "esnext",
    "target": "esnext",
    "moduleResolution": "node",
    "noUnusedParameters": true,
    "esModuleInterop": true,
    "noImplicitAny": true,
    "outDir": "./dist",
    "strict": true,
    "resolveJsonModule": true,
    "allowSyntheticDefaultImports": true,
    "skipLibCheck": true 
  },
}
